.site-nav {
  border-top: none;

  +tablet() {
    display: none !important;
  }
}

.site-nav-on {
  +tablet() {
    display: block !important;
  }
}

.menu .menu-item {
  display: block;
  margin: 0;

  a {
    position: relative;
    box-sizing: border-box;
    padding: 5px 20px;
    text-align: left;
    line-height: inherit;
    border-left: 0px solid #d8d8d8;
    height: 35px;
    border-bottom:unset;

    the-transition();

    &:hover {
      background: #eee;
      border-left: 20px #6f9abc solid;
    }
  }

  br { display: none; }
}

.menu-item-active a {
  @extend .menu .menu-item a:hover;

  &:after {
    content: " ";
    position: absolute;
    top: 50%;
    margin-top: -3px;
    right: 15px;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: $grey;
  }
}

.btn-bar {
  background-color: white;
}

.site-nav-toggle {
  left: 20px;
  top: 50%;

  -webkit-transform:  translateY(-50%);
  transform:  translateY(-50%);

  +tablet() {
    display: block;
  }
}
